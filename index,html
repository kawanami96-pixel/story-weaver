        <!-- Visual Tab -->
        <div id="tab-visual" class="absolute inset-0 flex flex-col bg-black translate-x-full transition-transform duration-300">
            <div class="p-3 border-b border-gray-800 flex justify-between items-center bg-slate-900">
                <span class="text-xs font-bold text-gray-400">Scene Gallery</span>
                <button id="gen-img-btn" class="px-4 py-1.5 bg-indigo-900/50 text-indigo-300 border border-indigo-500/30 rounded-full text-xs flex items-center gap-2" disabled>
                    <i data-lucide="aperture" class="w-3 h-3"></i> ç”Ÿæˆ
